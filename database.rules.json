{
  "rules": {
    // Персонажи: структура users/userId/characters/characterId
    "characters": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "$characterId": {
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId"
        }
      }
    },
    
    // Пользователи: доступ только к своему профилю
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    
    // Сессии игр: чтение для участников, запись для создателя
    "sessions": {
      "$sessionId": {
        ".read": "auth != null && (data.child('dmId').val() == auth.uid || data.child('playerIds').hasChild(auth.uid))",
        ".write": "auth != null && (newData.child('dmId').val() == auth.uid || (!newData.exists() && data.child('dmId').val() == auth.uid))"
      }
    }
  }
}