{
  "rules": {
    // Персонажи: доступ только к своим персонажам
    "characters": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$characterId": {
        ".read": "auth != null",
        ".write": "auth != null && (newData.child('userId').val() == auth.uid || (!newData.exists() && data.child('userId').val() == auth.uid))"
      }
    },
    
    // Пользователи: доступ только к своему профилю
    "users": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    
    // Сессии игр: чтение для всех авторизованных, запись только для создателя
    "sessions": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$sessionId": {
        ".read": "auth != null",
        ".write": "auth != null && (newData.child('hostId').val() == auth.uid || (!newData.exists() && data.child('hostId').val() == auth.uid))"
      }
    },
    
    // Заклинания: только чтение для всех
    "spells": {
      ".read": true,
      ".write": false
    },
    
    // По умолчанию: только для авторизованных пользователей
    ".read": "auth != null",
    ".write": "auth != null"
  }
}